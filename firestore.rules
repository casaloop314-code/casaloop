rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate required fields
    function hasRequiredFields(required) {
      return request.resource.data.keys().hasAll(required);
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data and any user's public profile
      allow read: if isAuthenticated();
      
      // Users can only create their own user document
      allow create: if isAuthenticated() && 
                      request.auth.uid == userId &&
                      hasRequiredFields(['uid', 'username', 'createdAt']);
      
      // Users can only update their own data
      allow update: if isOwner(userId) &&
                      // Prevent changing uid
                      request.resource.data.uid == resource.data.uid;
      
      // Users can delete their own account
      allow delete: if isOwner(userId);
    }
    
    // Listings (Properties) collection
    match /listings/{listingId} {
      // Anyone can read listings
      allow read: if true;
      
      // Authenticated users can create listings
      allow create: if isAuthenticated() &&
                      hasRequiredFields(['userId', 'username', 'title', 'price', 'location', 'type', 'category']) &&
                      request.auth.uid == request.resource.data.userId;
      
      // Only owner can update their listing
      allow update: if isAuthenticated() && 
                      request.auth.uid == resource.data.userId &&
                      // Prevent changing userId
                      request.resource.data.userId == resource.data.userId;
      
      // Only owner can delete their listing
      allow delete: if isAuthenticated() && 
                      request.auth.uid == resource.data.userId;
    }
    
    // Services collection
    match /services/{serviceId} {
      // Anyone can read services
      allow read: if true;
      
      // Authenticated users can create services
      allow create: if isAuthenticated() &&
                      hasRequiredFields(['userId', 'username', 'title', 'category', 'pricePerHour']) &&
                      request.auth.uid == request.resource.data.userId;
      
      // Only owner can update their service
      allow update: if isAuthenticated() && 
                      request.auth.uid == resource.data.userId;
      
      // Only owner can delete their service
      allow delete: if isAuthenticated() && 
                      request.auth.uid == resource.data.userId;
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Only participants can read conversations
      allow read: if isAuthenticated() && 
                    request.auth.uid in resource.data.participants;
      
      // Only participants can create conversations
      allow create: if isAuthenticated() &&
                      request.auth.uid in request.resource.data.participants &&
                      hasRequiredFields(['participants', 'participantNames', 'lastMessage', 'lastMessageTime']);
      
      // Only participants can update conversations
      allow update: if isAuthenticated() && 
                      request.auth.uid in resource.data.participants;
      
      // No one can delete conversations
      allow delete: if false;
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Only conversation participants can read messages
      allow read: if isAuthenticated();
      
      // Authenticated users can create messages
      allow create: if isAuthenticated() &&
                      request.auth.uid == request.resource.data.senderId &&
                      hasRequiredFields(['conversationId', 'senderId', 'senderName', 'text', 'timestamp']);
      
      // No one can update or delete messages
      allow update: if false;
      allow delete: if false;
    }
    
    // Reservations collection
    match /reservations/{reservationId} {
      // Users can read their own reservations or reservations for their properties
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.userId || 
                     request.auth.uid == resource.data.sellerId);
      
      // Authenticated users can create reservations
      allow create: if isAuthenticated() &&
                      request.auth.uid == request.resource.data.userId &&
                      hasRequiredFields(['propertyId', 'userId', 'username', 'sellerId', 'amount', 'status', 'createdAt']);
      
      // Only seller can update reservation status
      allow update: if isAuthenticated() && 
                      request.auth.uid == resource.data.sellerId &&
                      // Only allow status changes
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
      
      // No one can delete reservations (permanent record)
      allow delete: if false;
    }
    
    // Service Bookings collection
    match /serviceBookings/{bookingId} {
      // Users can read their own bookings or bookings for their services
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.clientId || 
                     request.auth.uid == resource.data.providerId);
      
      // Authenticated users can create bookings
      allow create: if isAuthenticated() &&
                      request.auth.uid == request.resource.data.clientId &&
                      hasRequiredFields(['serviceId', 'providerId', 'clientId', 'totalPrice', 'status']);
      
      // Provider or client can update booking status
      allow update: if isAuthenticated() && 
                      (request.auth.uid == resource.data.providerId || 
                       request.auth.uid == resource.data.clientId);
      
      // No one can delete bookings
      allow delete: if false;
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      
      // Authenticated users can create reviews
      allow create: if isAuthenticated() &&
                      request.auth.uid == request.resource.data.userId &&
                      hasRequiredFields(['propertyId', 'userId', 'username', 'rating', 'comment', 'createdAt']) &&
                      request.resource.data.rating >= 1 && 
                      request.resource.data.rating <= 5;
      
      // Only author can update their review
      allow update: if isAuthenticated() && 
                      request.auth.uid == resource.data.userId;
      
      // Only author can delete their review
      allow delete: if isAuthenticated() && 
                      request.auth.uid == resource.data.userId;
    }
    
    // Payment Logs collection (read-only after creation)
    match /paymentLogs/{logId} {
      // Users can read their own payment logs
      allow read: if isAuthenticated() && 
                    (request.auth.uid == resource.data.userId || 
                     request.auth.uid == resource.data.recipientId);
      
      // Only server can create payment logs (should be done server-side)
      allow create: if isAuthenticated() &&
                      hasRequiredFields(['paymentId', 'userId', 'amount', 'timestamp', 'status']);
      
      // Payment logs are immutable
      allow update: if false;
      allow delete: if false;
    }
    
    // Reports collection (for flagging content)
    match /reports/{reportId} {
      // Only admins can read reports (implement admin check as needed)
      allow read: if isAuthenticated();
      
      // Authenticated users can create reports
      allow create: if isAuthenticated() &&
                      request.auth.uid == request.resource.data.reporterId &&
                      hasRequiredFields(['reporterId', 'reporterUsername', 'contentType', 'contentId', 'reason', 'createdAt']);
      
      // No one can update or delete reports
      allow update: if false;
      allow delete: if false;
    }
    
    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
